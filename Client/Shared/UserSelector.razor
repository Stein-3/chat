@using blazorTest.Shared.Models;
@using blazorTest.Client.Shared.Components;

<WrapPanel Items="@Users">
    <ItemTemplate Context="users">
        <Selectable Value="@users">
            <DataTemplate Context="user">
                <UserItem Name="@user.HandleName" />
            </DataTemplate>
        </Selectable>
    </ItemTemplate>
</WrapPanel>

@code {
    /// <summary>
    /// 一覧するユーザー
    /// </summary>
    [Parameter]
    public List<SelectableContext<UserInformation>> Users { get; set; } = new();
}
